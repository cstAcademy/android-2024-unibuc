<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppButton" parent="AppTextView">

    </style>

    <style name="ActionButton" parent="AppButton">
        <item name="android:background">@drawable/selector_action_button</item>
        <item name="android:textColor">@color/selector_action_button_text</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionButton.AuthLogin">
        <item name="android:text">@string/authentication_action_log_in</item>
    </style>

    <style name="ActionButton.AuthRegister">
        <item name="android:text">@string/authentication_action_register</item>
    </style>

    <style name="ActionButton.AuthLogOut">
        <item name="android:text">@string/authentication_action_log_out</item>
    </style>

    <style name="ActionSecondButton" parent="AppButton">
        <item name="android:background">@drawable/shape_action_second_button_default</item>
        <item name="android:textColor">@color/selector_action_second_button_text</item>
        <item name="android:textSize">@dimen/material_text_body2</item>
        <item name="android:paddingHorizontal">@dimen/default_padding</item>
        <item name="android:paddingVertical">@dimen/default_padding_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ActionSecondButton.AuthSignUp">
        <item name="android:text">@string/authentication_action_go_to_register</item>
    </style>

</resources>